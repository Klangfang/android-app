<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/yellow_light"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <com.wfm.soundcollaborations.views.PlayerSimpleView
            android:id="@+id/sound_player"
            android:layout_width="match_parent"
            android:layout_height="140dp"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/navigation"
            app:tabTextColor="@color/grey_light"
            app:tabSelectedTextColor="@color/yellow_light"
            app:tabIndicatorColor="@color/yellow_light"
            app:tabGravity="fill"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#f0f0f0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        />

</RelativeLayout>
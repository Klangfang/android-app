<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wfm.soundcollaborations.interaction.views.PlayerSimpleView
        android:id="@+id/sound_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_sounds"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bars"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/yellow_light"
        app:tabSelectedTextColor="@color/yellow_light"
        app:tabTextColor="@color/grey_light" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_sounds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />
</LinearLayout>
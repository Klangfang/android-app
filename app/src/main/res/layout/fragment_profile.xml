<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <com.wfm.soundcollaborations.views.PlayerSimpleView
            android:id="@+id/sound_player"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_sounds"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/navigation"
            app:tabTextColor="@color/grey_light"
            app:tabSelectedTextColor="@color/yellow_light"
            app:tabIndicatorColor="@color/yellow_light"
            app:tabGravity="fill"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_sounds"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            />
</LinearLayout>
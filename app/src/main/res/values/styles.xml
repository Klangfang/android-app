<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarThemeDark" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/grey_light</item>
        <item name="actionMenuTextColor">@color/grey_light</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:background">@color/navigation</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <style name="fullScreenTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolbarThemeLight" parent="@style/ToolbarThemeDark">
        <item name="android:textColorPrimary">@color/grey_light</item>
        <item name="actionMenuTextColor">@color/grey_light</item>
        <item name="android:background">@color/content_bg</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="HashtagCheckboxTheme" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/yellow_light</item>
        <item name="android:textColorSecondary">@color/grey_light</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/yellow_light</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow_light</item>
    </style>


    <!-- Card View Styling -->
    <style name="card_view" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="card_view_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/s</item>
        <item name="android:layout_marginEnd">@dimen/s</item>
        <item name="android:layout_marginTop">@dimen/s</item>
        <item name="android:layout_marginBottom">@dimen/s</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/xl</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/s</item>
        <item name="android:paddingRight">@dimen/s</item>
        <item name="android:paddingTop">@dimen/xs</item>
        <item name="android:paddingBottom">@dimen/xs</item>
    </style>

</resources>

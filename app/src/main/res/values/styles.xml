<resources>

    <!-- Basic App Theme that applies to most screens. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bars</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="titleTextColor">@color/toolbar_title</item>
        <item name="actionMenuTextColor">@color/toolbar_title</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="colorControlNormal">@color/toolbar_title</item>
        <item name="colorControlHighlight">@color/highlight</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- Dark Theme that applies to Editor and it's related screens -->
    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/bars_dark</item>
        <item name="colorPrimaryDark">@color/status_bar_dark</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="titleTextColor">@color/toolbar_title_dark</item>
        <item name="actionMenuTextColor">@color/toolbar_title_dark</item>
        <item name="colorControlNormal">@color/toolbar_title_dark</item>
        <item name="colorControlHighlight">@color/highlight</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
    </style>

    <!-- Toolbar Theme that adapts to the activity theme -->
    <style name="BaseToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/titleTextColor</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Card View Styling -->
    <style name="card_view" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="card_view_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/s</item>
        <item name="android:layout_marginEnd">@dimen/s</item>
        <item name="android:layout_marginTop">@dimen/s</item>
        <item name="android:layout_marginBottom">@dimen/s</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="primary_button">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">@dimen/xl</item>
       <item name="android:textSize">14sp</item>
       <item name="android:background">@color/color_primary</item>
       <item name="android:textColor">@color/white</item>
       <item name="android:paddingLeft">@dimen/s</item>
       <item name="android:paddingRight">@dimen/s</item>
       <item name="android:paddingTop">@dimen/xs</item>
       <item name="android:paddingBottom">@dimen/xs</item>
    </style>

    <style name="counter_color">
        <item name="android:textColor">@color/grey_middle</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- README

    KLANGFANG BASE COLORS are the color-foundation of the app.

    - When to use: Reference them inside Klangfang Job Colors.
    - When NOT to use: Never use them inside code or layout files. Use Klangfang Job Colors for this purpose.
    - How to name them: "variation_colorname" for example light_grey
    - Specify as HEX values


    KLANGFANG TASK COLORS are colors tied to a specific task, eg. primary buttons, headlines, etc.
    They are divided into various categories, like primary colors, semantic colors and so on.

    - When to use: Use them in layout files or inside code.
    - When NOT to use: Always use them!
    - How to name them: No colornames like "green". Use names that specify the task, like "success_color"
    - Specify using Klangfang Base Colors

    Please never hardcode colors!
    -->

    <!-- Klangfang Base Colors -->
    <color name="black">#1B1B1B</color>
    <color name="grey_dark">#444444</color>
    <color name="grey_middle">#BDBDBD</color>
    <color name="grey_light">#E0E0E0</color>
    <color name="white">#FAFAFA</color>
    <color name="red">#F05555</color>
    <color name="yellow_dark">#B09000</color>
    <color name="yellow_light">#FFD800</color>
    <color name="green_dark">#2D643C</color>
    <color name="green_light">#37DC78</color>


    <!-- KLANGFANG TASK COLORS -->

    <!-- Primary Colors -->
    <color name="color_primary">@color/green_light</color>
    <color name="color_accent">@color/yellow_light</color>

    <!-- Semantic Colors -->
    <color name="color_success">@color/green_light</color>
    <color name="color_information">@color/grey_middle</color>
    <color name="color_warning">@color/yellow_dark</color>
    <color name="color_error">@color/red</color>

    <!-- TODO Define neutral colors, such as text and background -->
    <!-- Neutral Colors for App Theme -->
    <color name="toolbar_title">@color/white</color>
    <color name="bars">@color/black</color>
    <color name="status_bar">#111111</color>
    <color name="window_background">@color/grey_light</color>
    <color name="text_color">@color/black</color>

    <!-- Neutral Colors for Dark Theme -->
    <color name="toolbar_title_dark">@color/white</color>
    <color name="bars_dark">@color/grey_dark</color>
    <color name="status_bar_dark">#333333</color>
    <color name="window_background_dark">@color/black</color>
    <color name="text_color_dark">@color/white</color>

    <!-- Profile Colors -->
    <color name="toolbar_profile_title">@color/black</color>

    <!-- Sound-Visualization Colors -->
    <color name="color_my_sound">@color/yellow_light</color>
    <color name="color_my_sound_amplitude">@color/yellow_dark</color>
    <color name="color_other_sound">@color/green_light</color>
    <color name="color_other_sound_amplitude">@color/green_dark</color>

</resources>
